{
    "name": "webimpress/laminas-transfer",
    "description": "Transfer ZF repository to Laminas Project",
    "require": {
        "php": "^7.2",
        "ext-curl": "*",
        "ext-json": "*",
        "dflydev/fig-cookies": "^2.0",
        "fig/http-message-util": "^1.1",
        "knplabs/github-api": "^2.12.1",
        "laminas/laminas-zendframework-bridge": "^0.4.5 || ^1.0",
        "localheinz/composer-json-normalizer": "^1.0.2",
        "php-http/guzzle6-adapter": "^2.0",
        "php-http/httplug": "^2.0",
        "symfony/console": "^5.0.1",
        "zendframework/zend-diactoros": "^2.1.3"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6.8",
        "phpunit/phpunit": "^8.5",
        "roave/security-advisories": "dev-master",
        "webimpress/coding-standard": "^1.1"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Laminas\\Transfer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaminasTest\\Transfer\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
