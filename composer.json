{
    "name": "webimpress/laminas-transfer",
    "description": "Transfer ZF repository to Laminas Project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/weierophinney/php-github-api.git"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-curl": "*",
        "ext-json": "*",
        "dflydev/fig-cookies": "^2.0",
        "fig/http-message-util": "^1.1",
        "knplabs/github-api": "dev-feature/httplug-v2 as 2.12.0",
        "laminas/laminas-zendframework-bridge": "^0.3",
        "localheinz/composer-json-normalizer": "^1.0.2",
        "php-http/guzzle6-adapter": "^2.0",
        "php-http/httplug": "^2.0",
        "symfony/console": "^4.3.2",
        "zendframework/zend-diactoros": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2.4",
        "roave/security-advisories": "dev-master",
        "webimpress/coding-standard": "^1.0.3"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Laminas\\Transfer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaminasTest\\Transfer\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
