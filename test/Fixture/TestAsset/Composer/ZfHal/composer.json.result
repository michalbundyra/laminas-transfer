{
    "name": "apigility/apigility-hal",
    "description": "Laminas Module providing Hypermedia Application Language assets and rendering",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "apigility",
        "module",
        "psr-13",
        "rest",
        "hal"
    ],
    "homepage": "https://apigility.dev",
    "support": {
        "docs": "https://apigility.org/documentation",
        "issues": "https://github.com/apigility/apigility-hal/issues",
        "source": "https://github.com/apigility/apigility-hal",
        "rss": "https://github.com/apigility/apigility-hal/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.6.x-dev",
            "dev-develop": "1.7.x-dev"
        },
        "laminas": {
            "module": "Apigility\\Hal"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "apigility/apigility-api-problem": "^1.2.1",
        "laminas/laminas-eventmanager": "^2.6.3 || ^3.0.1",
        "laminas/laminas-filter": "^2.7.1",
        "laminas/laminas-http": "^2.5.4",
        "laminas/laminas-hydrator": "^1.1 || ^2.2.1 || ^3.0",
        "laminas/laminas-mvc": "^2.7.15 || ^3.0.2",
        "laminas/laminas-paginator": "^2.7",
        "laminas/laminas-stdlib": "^2.7.7 || ^3.0.1",
        "laminas/laminas-uri": "^2.5.2",
        "laminas/laminas-view": "^2.8.1",
        "laminas/laminas-zendframework-bridge": "^0.3.2 || ^1.0",
        "psr/link": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "~1.0.0",
        "phpunit/phpunit": "^5.7.21 || ^6.3",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "files": [
            "src/_autoload.php"
        ],
        "psr-4": {
            "Apigility\\Hal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApigilityTest\\Hal\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    },
    "replace": {
        "zfcampus/zf-hal": "self.version"
    }
}
